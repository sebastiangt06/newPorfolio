---
import LinkButton from '../LinkButton.astro'
export interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}
const { title, description, link, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"
>
</div>
<h3 class="text-lg font-semibold text-[#F9FF00] mt-2">
  {title}
</h3>
<time class="mb-1 text-sm font-normal leading-none text-[#F9FF00]/60">{date}</time
>
<p class="mb-4 text-base font-normal text-gray-200 text-pretty">
  {description}
</p>

{
  link && (
    <LinkButton link={link}>
      Saber Mas...{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </LinkButton>
  )
}


